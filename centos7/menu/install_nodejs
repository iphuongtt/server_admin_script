#!/bin/bash

clear

. /etc/server_admin/menu/color.sh
. /etc/server_admin/menu/global_var

install_nvm() {
	wget -qO- https://raw.githubusercontent.com/creationix/nvm/v0.33.11/install.sh | bash
	if [ $? -eq 0 ]; then
		source ~/.bash_profile
		if [ $? -eq 0 ]; then
			return 1
		else
			return 0
		fi
	else
		return 0
	fi
}

install_nodejs() {
	nvm install node
	if [ $? -eq 0 ]; then
		install_nodejs=1
	else
		install_nodejs=0	
	fi
}

installed_nvm=$(install_nvm)

echo $installed_nvm
